                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/eshaa_time" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/midnight_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toStartOf="@+id/timer"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fajr_layout"
                app:strokeColor="@color/text_green_color"
                app:strokeWidth=".5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/midnight_tv"
                        style="@style/boldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/midnight" />

                    <TextView
                        android:id="@+id/midnight_time"
                        style="@style/boldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@{model.midnightTime}"
                        android:textColor="@color/text_brown_color" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_timer"
                app:layout_constraintBottom_toBottomOf="@+id/midnight_layout"
                app:layout_constraintEnd_toStartOf="@+id/night_last_quarter_layout"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/midnight_layout"
                app:layout_constraintTop_toTopOf="@+id/midnight_layout" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/night_last_quarter_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/timer"
                app:layout_constraintTop_toTopOf="@id/midnight_layout"
                app:strokeColor="@color/text_green_color"
                app:strokeWidth=".5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tholth_tv"
                        style="@style/boldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_quarter" />

                    <TextView
                        android:id="@+id/last_quarter_time"
                        style="@style/boldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@{model.lastQuarterTime}"
                        android:textColor="@color/text_brown_color" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/after_prayer_azkar_title"
                style="@style/boldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                android:background="@drawable/bg_titles"
                android:gravity="center"
                android:text="أذكار بعد الصلاة"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/midnight_layout" />

            <TextView
                android:id="@+id/after_prayer_azkar"
                style="@style/regularText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:text="@string/azkar_exp"
                android:textAlignment="center"
                android:textColor="@color/text_green_color"
                app:layout_constraintTop_toBottomOf="@id/after_prayer_azkar_title" />

            <Button
                android:id="@+id/read_after_prayers_now_btn"
                style="@style/regularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="اقرأها الآن"
                android:textColor="@color/white"
                app:backgroundTint="@color/text_orange_color"
                app:cornerRadius="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/after_prayer_azkar" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/qebla_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/bg_styled_view"
                android:padding="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/read_after_prayers_now_btn">

                <ImageView
                    android:id="@+id/qebla_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_qebla"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/boldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="القِبلـة"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/qebla_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/khatma_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/bg_styled_view"
                android:padding="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/qebla_layout">

                <ImageView
                    android:id="@+id/khatma_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_khatma"
                    app:layout_constraintBottom_toBottomOf="@id/start_khatma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/khatma" />

                <TextView
                    android:id="@+id/khatma"
                    style="@style/boldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ختمــة"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24ssp"
                    app:layout_constraintEnd_toStartOf="@id/khatma_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/start_khatma"
                    style="@style/mediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:text="ابدأ الآن"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/text_orange_color"
                    app:cornerRadius="@dimen/_16sdp"
                    app:layout_constraintEnd_toEndOf="@id/khatma"
                    app:layout_constraintStart_toStartOf="@id/khatma"
                    app:layout_constraintTop_toBottomOf="@id/khatma" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/azkar_title"
                style="@style/boldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                android:background="@drawable/bg_titles"
                android:gravity="center"
                android:text="الأذكـــار"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/khatma_layout" />

            <TextView
                android:id="@+id/azkar"
                style="@style/regularText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:text="@string/azkar_exp"
                android:textAlignment="center"
                android:textColor="@color/text_green_color"
                app:layout_constraintTop_toBottomOf="@id/azkar_title" />

            <Button
                android:id="@+id/read_azkar_btn"
                style="@style/regularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="اقرأ"
                android:textColor="@color/white"
                app:backgroundTint="@color/text_orange_color"
                app:cornerRadius="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/azkar" />

            <include
                android:id="@+id/blog_item"
                layout="@layout/item_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/read_azkar_btn" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintTop_toBottomOf="@id/blog_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>