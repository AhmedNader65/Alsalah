<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/date_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_24sdp"
    app:cardElevation="@dimen/_20sdp"
    app:layout_constraintTop_toBottomOf="@id/prayer_pic"
    app:strokeColor="@color/light_green"
    app:strokeWidth="@dimen/_1sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:src="@drawable/ic_home_calendar" />

        <ImageView
            android:id="@+id/right_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_home_prev" />

        <TextView
            android:id="@+id/today"
            style="@style/regularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="الاثنين"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/left_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_home_next" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_24sdp"
            app:strokeColor="@color/text_green_color"
            app:strokeWidth="@dimen/_1sdp">

            <TextView
                android:id="@+id/day_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="5"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/month_year"
            style="@style/regularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="ذي الحجة 1442"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
