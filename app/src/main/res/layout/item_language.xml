<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:background="@color/languages_constraint"
        android:padding="@dimen/_6sdp">

        <ImageView
            android:id="@+id/language_status"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_lang_unchecked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/light_grey" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/language_status_checked"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_done_24"
            android:elevation="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/language_status"
            app:layout_constraintEnd_toEndOf="@+id/language_status"
            app:layout_constraintTop_toTopOf="@+id/language_status"
            app:layout_constraintStart_toStartOf="@+id/language_status"
            app:tint="@color/white" />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/language"
        android:id="@+id/language_title"
        style="@style/mediumText"/>



    </androidx.constraintlayout.widget.ConstraintLayout>