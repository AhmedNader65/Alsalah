<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_styled_page_white"
    tools:context="ui.menu.compass.CompassFragment">

    <TextView
        android:id="@+id/title"
        style="@style/boldText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_green_color"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/compass"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <LinearLayout
        android:id="@+id/buttonsLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/byCompassBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_state_colors"
            android:padding="@dimen/_8sdp"
            app:strokeColor="@color/text_orange_color"
            app:cornerRadius="@dimen/_16sdp"
            android:textColor="@color/button_text_state_colors"
            android:text="@string/usingCompass"
            android:fontFamily="@font/din_medium"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/by_sun_and_moon"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_8sdp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_state_colors"
            app:strokeColor="@color/text_orange_color"
            app:cornerRadius="@dimen/_16sdp"
            android:textColor="@color/button_text_state_colors"
            android:text="@string/by_sun_and_moon"
            android:fontFamily="@font/din_medium"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/by_vision"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_8sdp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_state_colors"
            app:strokeColor="@color/text_orange_color"
            app:cornerRadius="@dimen/_16sdp"
            android:textColor="@color/button_text_state_colors"
            android:text="@string/by_vision"
            android:fontFamily="@font/din_medium"/>


    </LinearLayout>

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonsLin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compass_image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_compass" />
    <TextView
        android:layout_marginTop="@dimen/_16sdp"
        android:id="@+id/compass_direction"
        style="@style/regularText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=":اتجاه القبلة من الشمال 45"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/compass_image" />

</androidx.constraintlayout.widget.ConstraintLayout>