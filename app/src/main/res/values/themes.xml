<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alsalah" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_orange_color</item>
        <item name="colorPrimaryVariant">@color/header_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="OverlayPrimaryColorBlue" parent="Theme.Alsalah">
        <item name="colorPrimary">#88A1C8</item>
    </style>

    <style name="OverlayPrimaryColorPink" parent="Theme.Alsalah">
        <item name="colorPrimary">#F86F8C</item>
    </style>
    <style name="OverlayPrimaryColorOrange" parent="Theme.Alsalah">
        <item name="colorPrimary">@color/text_orange_color</item>
    </style>
    <style name="boldText">
        <item name="android:fontFamily">@font/dinnextbold</item>
        <item name="fontFamily">@font/dinnextbold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="mediumText">
        <item name="android:fontFamily">@font/din_medium</item>
        <item name="fontFamily">@font/din_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="quran">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/quran</item>
        <item name="fontFamily">@font/quran</item>
    </style>
    <style name="regularText">
        <item name="android:fontFamily">@font/dinnextregular</item>
        <item name="fontFamily">@font/dinnextregular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="lightText">
        <item name="android:fontFamily">@font/din_light</item>
        <item name="fontFamily">@font/din_light</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="bottomRadiusCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_56sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_56sdp</item>
    </style>
</resources>